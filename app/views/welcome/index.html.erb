<h1 align="center">Battle city</h1>
<div id="user_nav">
	<% if user_signed_in?%>
		<div><canvas align="left" id="map" width="600" height="600"></canvas></div>
		<p align>
			Вы вошли как <%=current_user.email %> <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
		</p>
		<%= button_to "Создать игру", new_welcome_path %>
		<%= button_to "Удалить(отключиться)", welcome_disconnect_path %>
		<p>Ваш код: <%=current_user.code %></p>
		<%= button_to "Сгенерировать код", welcome_generate_code_path %>
		<button onclick = 'post_level_map()'>Сохранить игру</button>
