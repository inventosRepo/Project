<p>
   <strong>Создатель:</strong>
   <%= @article.creator %>
</p>

<p>
   <strong>Заголовок:</strong>
   <%= @article.title %>
</p>

<p>
   <strong>Текст:</strong>
   <%= @article.text %>
</p>

<h2>Комментарии</h2>
<%= render @article.comments %>

<h2>Добавить комментарий:</h2>
<%= form_for([@article, @article.comments.build]) do |l| %>
  <p>
    <%= l.label :Автор_комментария %><br>
    <%= l.text_field :commenter %>
  </p>
  <p>
    <%= l.label :Комментарий %><br>
    <%= l.text_area :body %><br>
  </p>
  <p>
    <%= l.submit %>
  </p>
<% end %>
<%= link_to 'Редактировать статью', custom_edit_url_path %>
<%= link_to 'Назад', articles_path %>
